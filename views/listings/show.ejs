<% layout("/layouts/boilerplate") %>

<div class="container-fluid mt-4">

  <!-- Title + Card -->
  <div class="row justify-content-center">
<div class="col-12 col-md-8">


      <h3 class="mb-3 offset-1"><b><%= listing.title %></b></h3>

      <div class="card show-card listing-card mx-auto">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">

        <div class="card-body">
         
           <p>
          Owned by @
          <i><%= listing.owner?.username || "Unknown User" %></i>
          </p>

          <p><%= listing.description %></p>
          <p><b>₹ <%= listing.price.toLocaleString("en-IN") %></b></p>
          <p><%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>

    </div>
  </div>

  <!-- Edit/Delete -->
  <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)){ %>
  <div class="row justify-content-center mt-3">
    <div class="col-12 col-md-8 d-flex gap-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
  <% } %>

  <hr> 
  
  <!-- MAP -->
<div class="row justify-content-center">
  <div class="col-12 col-md-8 mb-4">
    <h4>Location</h4>

    <% if (listing.geometry && listing.geometry.coordinates) { %>

      <div id="map" style="height:300px; width:100%; border-radius:10px;"></div>

      <script>
        const coords = <%-JSON.stringify(listing.geometry.coordinates) %>;

        const map = L.map("map").setView(
          [coords[1], coords[0]],
          12
        );

        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
          attribution: "© OpenStreetMap contributors"
        }).addTo(map);

        L.marker([coords[1], coords[0]])
          .addTo(map)
          .bindPopup("<b><%= listing.title %></b>");

        setTimeout(() => {
          map.invalidateSize();
        }, 300);
      </script>

    <% } else { %>
      <p class="text-muted">Location not available.</p>
    <% } %>

  </div>
</div>





  <!-- Review Section -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">

      <% if(currUser){ %>
      <h3>Leave a Review</h3>
      <form action="/listings/<%= listing.id %>/reviews" method="POST">


<fieldset class="starability-slot">
 
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="second-rate1" name="review[rating]" value="1" />
  <label for="second-rate1" title="Terrible">1 star</label>
  <input type="radio" id="second-rate2" name="review[rating]" value="2" />
  <label for="second-rate2" title="Not good">2 stars</label>
  <input type="radio" id="second-rate3" name="review[rating]" value="3" />
  <label for="second-rate3" title="Average">3 stars</label>
  <input type="radio" id="second-rate4" name="review[rating]" value="4" />
  <label for="second-rate4" title="Very good">4 stars</label>
  <input type="radio" id="second-rate5" name="review[rating]" value="5" />
  <label for="second-rate5" title="Amazing">5 stars</label>
</fieldset>
  <div class="mb-3">
    <textarea name="review[comment]" class="form-control" required></textarea>
  </div>

  <button class="btn btn-outline-dark">Submit</button>
</form>
<% } %>


<h4 class="mt-4">All Reviews</h4>


<div class="row">
  <% for(let review of listing.reviews){ %>
    <div class="col-12 col-md-6 mb-3">
      <div class="card p-3 shadow-sm border-0">

        <h6><%= review.author.username %></h6>

        <fieldset class="starability-result"
                  data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </fieldset>

        <p><%= review.comment %></p>

        <% if(currUser && review.author._id.toString() === currUser._id.toString()){ %>
          <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                method="POST">
            <button class="btn btn-sm btn-danger mt-2">Delete</button>
          </form>
        <% } %>

      </div>
    </div>
  <% } %>
</div>




    </div>
  </div>

</div>
